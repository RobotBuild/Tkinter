from tkinter import *

root = Tk()
var = IntVar()

R1 = Radiobutton(root, text="Option 1", variable = var, value = 1)
R1.pack()

R2 = Radiobutton(root, text="Option 2", variable = var, value = 2)
R2.pack()

R3 = Radiobutton(root, text="Option 3", variable = var, value = 3)
R3.pack()

root.mainloop()
